
.container {
  padding: 16px;
  background-color: #ffffff;
  min-height: 100vh;
  font-family: Arial, sans-serif;
}
.company-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  border-bottom: 1px solid #e0e0e0;
}
.company-logo {
  width: 48px;
  height: 48px;
  margin-bottom: 8px;
}
.company-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
}
.user-info {
  padding: 16px;
  border-bottom: 1px solid #e0e0e0;
}
.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 16px;
}
.user-icon {
  width: 24px;
  height: 24px;
  margin-right: 8px;
}
.text-container {
  display: flex;
  flex-direction: column;
}
.user-text {
  font-size: 16px;
  color: #333;
}
.user-subtext {
  font-size: 14px;
  color: #666;
}
.divider {
  width: 100%;
  height: 1px;
  background-color: #e0e0e0;
  margin-bottom: 16px;
}
.company-description {
  padding: 16px;
  border-bottom: 1px solid #e0e0e0;
  position: relative;
}
.section-header {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 8px;
  margin-top: 16px;
  color: #333;
}
.description-text {
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}
.link {
  display: flex;
  align-items: center;
  margin-top: 8px;
}
.link-text {
  font-size: 14px;
  color: #333;
}
.link-url {
  font-size: 14px;
  color: #4285f4;
  margin-left: 8px;
}
.watermark {
  display: flex;
  justify-content: center;
  margin-top: 16px;
}
.watermark-image {
  width: 100%;
  opacity: 0.1;
}
.watermark-text-container {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}
.watermark-text {
  font-size: 14px;
  color: #999999;
}
